# fd as a modern remplacement to find
# If the find binary is called fdfind (as on Debian/Ubuntu), alias fd to fdfind
if command -v fdfind &> /dev/null; then
    alias fd='fdfind'
fi
alias fda='fd -I -H'

# ripgrep
alias rga='rg -. --no-ignore'

# eza as a modern remplacement to ls
alias ls='eza'
alias ll='eza -lbhgma --git'
alias lt='eza --tree --level=2'

# numbat
alias nb='numbat'

# bat as a modern remplacement to cat
# If the bat binary is called batcat (as on Debian/Ubuntu), alias bat to batcat
if command -v batcat &> /dev/null; then
    alias bat='batcat'
fi
alias cat='bat -p'

# Fuzzy search directory navigation
alias f='cd $(fd --type directory | fzf)'

# Open current directory with explorer
alias dopen="xdg-open ."

# Add a function to transform typst equations to a png and copy it to the clipboard
function typstclip() { \
    input="$1"; \
    tmpfile=$(mktemp /tmp/equationXXXX.typ); \
    echo "#set page(width: auto, height: auto, margin: 1mm);$ $input $" > "$tmpfile"; \
    typst compile -f png "$tmpfile" /tmp/equation.png; \
    xclip -selection clipboard -t image/png -i /tmp/equation.png; \
    rm "$tmpfile" /tmp/equation.png; \
}
